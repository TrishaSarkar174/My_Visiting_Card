<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">



    <!-- Card Background -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#55679C"/> <!-- Main background color -->
            <corners android:radius="16dp"/> <!-- Rounded corners -->
            <padding
                android:left="8dp"
                android:top="8dp"
                android:right="8dp"
                android:bottom="8dp" />
        </shape>
    </item>

    <!-- Card Shadow -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F5F7F8"/> <!-- Shadow color -->
            <corners android:radius="16dp"/>
            <padding
                android:left="0dp"
                android:top="10dp"
                android:right="10dp"
                android:bottom="0dp" />
        </shape>
    </item>

</layer-list>
